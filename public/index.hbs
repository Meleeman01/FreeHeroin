<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Free heroin</title>
	<link rel="stylesheet" type="text/css" href="/bulma.min.css">
    <link rel="stylesheet" type="text/css" href="/main.css">


</head>
<body>
	
	<div class="columns">
		<div class="column is-half custom">
			
			<video class="video" controls width="100%" autoplay="true"  muted="true">
				<source src="/sample.mp4"
            type="video/mp4">
			</video>
		</div>
		<div class="column is-half">
            <div class="button-wrapper">

                <div class="custom">
                <svg class="icon is-danger">
                    <use xlink:href="solid.svg#share"></use>
                </svg>
                <button id="windows" class="button is-danger is-large is-size-2">
                    <svg class="windows-icon">
                        <use xlink:href="brands.svg#windows"></use>
                    </svg>
                    <span>Download</span>
                </button>
            </div>
            <div class="custom">
                <svg class="icon ">
                    <use xlink:href="solid.svg#share"></use>
                </svg>
                <button id="mac" class="button is-primary is-large is-size-2 ">
                    <svg class="apple-icon">
                        <use xlink:href="brands.svg#apple"></use>
                    </svg>
                    <span>Download</span>
                </button>
            </div>
            </div>
            
                    
		</div>
	</div>
	<div class="columns">
		<div class="column is-one-third"></div>
		<div class="column is-one-third">

			<p>LOL Heres the footer</p>
		</div>
		<div class="column is-one-third"></div>
	</div>
    <div class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">

                <!--put stripe checkout items here-->
                <form action="/charge" method="post" id="payment-form">
                    <div class="form-row">
                        <h2 class="subtitle"></h2>
                        <label for="card-element">
                            Credit or debit card
                        </label>
                    <div id="card-element">
                        <!-- A Stripe Element will be inserted here. -->
                    </div>

                    <!-- Used to display Element errors. -->
                    <div id="card-errors" role="alert"></div>
                    </div>

                    <button id="lol" class="button is-primary">Submit Payment</button>
                </form>
            </div>
    </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

<!--display errors to users-->
<p style="color: red;">{{ errs }}</p>
<script src="https://js.stripe.com/v3/"></script>
<script src="/main.js"></script>
</body>
</html>